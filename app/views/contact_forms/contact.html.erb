<div class="container-contact100">
	<div class="wrap-contact100">
		<%= form_tag submit_contact_details_contact_forms_path, remote: true, class: "contact100-form validate-form", id: "contact_data" do  %>
			<span class="contact100-form-title" id="contact-form-content">
				<%= I18n.translate("send_message", locale: I18n.locale) %>
			</span>
			
			<label class="label-input100" for="first-name"><%= I18n.translate(:enter_first_name, locale: I18n.locale) %> *</label>
			<div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="<%= I18n.translate(:first_name_req) %>">
				<input id="first_name" class="input100" type="text" name="first_name" placeholder="<%= I18n.translate("activerecord.attributes.contact_form.first_name", locale: I18n.locale) %>">
				<span class="focus-input100"></span>
			</div>
			<div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="<%= I18n.translate(:last_name_req, locale: I18n.locale) %>">
				<input id="last_name" class="input100" type="text" name="last_name" placeholder="<%= I18n.translate("activerecord.attributes.contact_form.last_name", locale: I18n.locale) %>">
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="email"><%= I18n.translate(:enter_email, locale: I18n.locale) %> *</label>
			<div class="wrap-input100 validate-input" data-validate = "<%= I18n.translate(:email_req, locale: I18n.locale) %>">
				<input id="email" class="input100" type="email" name="email" placeholder="<%= I18n.translate(:email, locale: I18n.locale) %>">
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="phone"><%= I18n.translate(:enter_no, locale: I18n.locale) %> *</label>
			<div class="wrap-input100">
				<input id="mobile_no" class="input100" type="tel" name="mobile_no" placeholder="<%= I18n.translate(:mobile_req, locale: I18n.locale) %>" oninput="this.value=this.value.replace(/[^0-9]/g,'');" minlength="10" maxlength="10">
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="message"><%= I18n.translate(:enter_message, locale: I18n.locale) %> *</label>
			<div class="wrap-input100 validate-input" data-validate = "<%= I18n.translate(:message_required, locale: I18n.locale) %>">
				<textarea id="message" class="input100" name="message" placeholder="<%= I18n.translate(:write_message, locale: I18n.locale) %>"></textarea>
				<span class="focus-input100"></span>
			</div>

			<div class="container-contact100-form-btn">
				<button class="contact100-form-btn">
					<%= I18n.translate(:send_message, locale: I18n.locale) %>
				</button>
			</div>
		<% end %>

		<div class="contact100-more flex-col-c-m" style="background-image: url('/assets/bg-01.jpg');">
			<div class="flex-w size1 p-b-47">
				<div class="txt1 p-r-25">
					<i class="fa fa-map-marker" aria-hidden="true"></i>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= I18n.translate(:address, locale: I18n.locale) %>
					</span>

					<span class="txt2">
						<%= I18n.translate(:address_value, locale: I18n.locale) %>
					</span>
				</div>
			</div>

			<div class="dis-flex size1 p-b-47">
				<div class="txt1 p-r-25">
					<i class="fa fa-phone" aria-hidden="true"></i>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= I18n.translate(:lets_talk, locale: I18n.locale) %>
					</span>

					<span class="txt3">
						+1 800 1236879
					</span>
				</div>
			</div>

			<div class="dis-flex size1 p-b-47">
				<div class="txt1 p-r-25">
					<i class="fa fa-envelope" aria-hidden="true"></i>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= I18n.translate(:support, locale: I18n.locale) %>
					</span>

					<span class="txt3">
						contact@example.com
					</span>
				</div>
			</div>
		</div>
	</div>
</div>
<%= content_for :script do %>
	<script type="text/javascript">
		$('#closebtn').click(function(){
			$('.alert').css('display','none');
		});
	</script>
<% end %>